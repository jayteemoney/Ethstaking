{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "types": ["node", "mocha", "chai"]
  },
  "include": ["hardhat.config.ts", "ignition/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}